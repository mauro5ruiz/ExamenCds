@model IEnumerable<FinalRuiz2018.Models.Cd>

@{
    ViewBag.Title = "Vísta";
}

<h2>Vísta</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create",new{},new{@class="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Interprete)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estilo.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AñoGrabacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioCosto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioVenta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Interprete.NombreCompleto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estilo.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AñoGrabacion)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.PrecioCosto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioVenta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.CdId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.CdId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.CdId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

@model IEnumerable<FinalRuiz2018.Models.Proveedor>

@{
    ViewBag.Title = "Vísta";
}

<h2>Vísta</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create",new{},new{@class="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RazonSocial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cuil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NroTelefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RazonSocial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cuil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NroTelefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ProveedorId },new{@class="btn btn-warning"}) |
            @Html.ActionLink("Detalles", "Details", new { id=item.ProveedorId },new{@class="btn btn-info"}) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.ProveedorId },new{@class="btn btn-danger"})
        </td>
    </tr>
}

</table>

@model IEnumerable<FinalRuiz2018.Models.Usuario>

@{
    ViewBag.Title = "Vísta";
}

<h2>Vísta</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create",new{},new{@class="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreCompleto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Celular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreUsuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCompleto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Celular)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.Foto))
            {
                <img src="@Url.Content(item.Foto)" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
            }        
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.UsuarioId },new{@class="btn btn-warning"}) |
            @Html.ActionLink("Detalles", "Details", new { id=item.UsuarioId },new{@class="btn btn-info"}) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.UsuarioId },new{@class="btn btn-danger"})
        </td>
    </tr>
}

</table>

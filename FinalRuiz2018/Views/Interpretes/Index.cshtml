@model IEnumerable<FinalRuiz2018.Models.Interprete>

@{
    ViewBag.Title = "Vísta";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create",new{},new{@class="btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nacionalidad.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCompleto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nacionalidad.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.InterpreteId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.InterpreteId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.InterpreteId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
